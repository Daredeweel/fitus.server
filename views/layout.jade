doctype html
html
    head
        title= cardTitle
        block head
        link(rel='stylesheet', href='/css/layout.css')
        link(rel='stylesheet', href='/css/font/foundation-icons.css')
        script(src='js/layout.js')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
    body._pageWidth
        header._ofBody._pageWidth
            ._scrBorder
                ._wrap
                    #serviceFace
                        a(href='/')._linkWhite
                            span.fi-home.pointer &nbsp
                            span Fitus.eu
                    #introToLog
                        #links
                            a._pointer(onclick='toLoginForm()') Zaloguj się
                            span &nbsp|&nbsp
                            a._pointer(href='/register') Rejestracja
                    form#loginBox(name='loginForm')
                        span.fi-asterisk &nbsp&nbsp
                        span Login:
                        input#login(type='text')
                        span Hasło:
                        span
                        input#password(type='password')
                        button._pointer Zaloguj się

        ._scrBorder
            ._wrap._middle._pageWidth
                block main
        footer._ofBody
            ._wrap
                p Copyright to
                span Black Baron's Development
